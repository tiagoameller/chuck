$("#user_form").modal("hide")

var table = $("#users_table").DataTable()
var tr = $("#<%= dom_id(@user) %>")
var row = table.row(tr)
row.data( <%= raw render_user(@user).to_json %> ).draw(false)

App.common_controller.toast(
  "",
  "<%= I18n.t('controllers.updated', model_name: User.model_name.human) %>",
  "notice"
)
